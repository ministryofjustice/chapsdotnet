@using ChapsDotNET.Frontend.Components.CheckboxGroup
@using ChapsDotNET.Frontend.Components.Checkbox
@model ChapsDotNET.Frontend.Components.CheckboxGroup.CheckboxGroupModel

@{
    string hintId = $"{Model.Id}-hint-wrapper";
}

<div class="govuk-form-group">
    <fieldset class="govuk-fieldset" aria-describedby="@hintId">
        <legend class="govuk-fieldset__legend">
            <h2 class="govuk-fieldset__heading">
                @Model.Label
            </h2>
        </legend>
        @if (Model.Hint != null)
        {
            <div id="@hintId" class="govuk-hint">
                @Model.Hint
            </div>
        }
        <div class="govuk-checkboxes">
            @foreach (CheckboxModel option in Model.Options)
            {
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" checked="@option.Checked" id="@option.Id" name="@Model.Id" type="checkbox" value="@option.Id">
                    <label class="govuk-label govuk-checkboxes__label" for="@option.Id">
                        @Model.Label
                    </label>
                </div>
            }
        </div>
    </fieldset>
</div>

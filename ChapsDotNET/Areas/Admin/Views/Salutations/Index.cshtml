<div class="breadcrumbs">
    <h6>
         @Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)
        &nbsp;>&nbsp;
         @Html.ActionLink("Administration", "Index", "Admin" )
        &nbsp;>&nbsp; Salutations
    </h6>
</div>

<h1>Salutations</h1>

<div class="actionLinks">
    @Html.ActionLink("Create new Salutation", "Create", "Salutations")
</div>

<table>
    <caption class="caption">Existing salutations</caption>
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Active
            </th>
        </tr>
    </thead>
    @if (Model.Results != null)
    {
        @foreach (var salutation in Model.Results.ToList())
        {
            <tr>
                <td>
                    <a href="/Admin/Salutations/Edit/@salutation.SalutationId">
                        @Html.DisplayFor(x => salutation.Detail)
                    </a>
                </td>
                <td align="center">
                    @Html.DisplayFor(x => salutation.Active)
                </td>
            </tr>
        }
    }
</table>

<div>
    @Html.PageLinks(@Model, x => Url.Action("Index", new { page = x.ToString() }))
</div>

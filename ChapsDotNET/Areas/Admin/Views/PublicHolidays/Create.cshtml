@model ChapsDotNET.Models.PublicHolidayViewModel

@{
    ViewData["Title"] = "Create a new public holiday";
}

<div class="breadcrumbs">
    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)
    &nbsp;>&nbsp;
    @Html.ActionLink("Administration", "Index", "Admin")
    &nbsp;>&nbsp;
    @Html.ActionLink("Holidays", "Index", "PublicHolidays")
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset class="form-fieldset">
        <legend>
            <h1>@ViewBag.Title</h1>
        </legend>

        <div class="editor-label">
            <label for="Date">Date</label>
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Date, "{0:yyyy-MM-dd}", new
            {
                htmlAttributes = new
                {
                    @class = "future-date",
                    @type = "date",
                    @value = DateTime.Now.AddDays(1).ToShortDateString()
                }
            })
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            <label for="Description">Detail</label>
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <input class="button" type="submit" value="Create" />
    </fieldset>
}
